<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false">

    <RelativeLayout
        android:id="@+id/normal_snack_bar_rlv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:elevation="8dp"
        app:elevation="8dp"
        android:clipToPadding="false"
        android:background="@drawable/bg_snack">

        <TextView
            android:id="@+id/snack_bar_txt_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/snack_bar_btn_action"
            android:gravity="left"
            android:padding="16dp"
            android:maxLines="2"
            android:layout_centerVertical="true"
            android:textColor="#fff" />

        <Button
            android:id="@+id/snack_bar_btn_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dismiss"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="?selectableItemBackgroundBorderless"
            android:visibility="visible"
            android:textAllCaps="false"
            style="@style/Base.TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
            android:textColor="@color/snack_success" />

    </RelativeLayout>

</RelativeLayout>